<BaseBuildScreen>:
    canvas.before:
        Color:
            rgb: get_color_from_hex(Graphics.get("BaseBuildScreen", "crater_outside_color"))

        Rectangle:
            pos: self.pos
            size: self.size

    BetterScatter:
        id: scatter
        auto_bring_to_front: False

        FloatLayout:
            id: background

            #canvas.after:
            #    Color:
            #        rgba: 1, 0, 0, 0.1 # debug

            #    Rectangle:
            #        pos: self.pos
            #        size: self.size

            Image:
                id: canyon_floor
                texture: Textures.BaseLayout.canyon_floor.texture

            Image:
                id: crater_walls
                texture: Textures.BaseLayout.crater_walls.texture

            Image:
                id: crater_floor
                texture: Textures.BaseLayout.crater_floor.texture

            Image:
                id: crater_outside
                texture: Textures.BaseLayout.crater_outside.texture

        BaseLayout:
            id: base_layout

            size_hint: 1, 1 # Graphics.gettuple("BaseLayout", "building_size_hint")

    FloatLayout:
        id: controls

        Button:
            on_release: scatter.reset()
            size_hint: 0.13, 0.05
            text: "Reset"

            pos_hint: {"right": 1, "top":1}