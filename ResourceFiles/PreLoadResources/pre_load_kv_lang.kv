#:import AppInfo AppInfo

<SpaceBuilderMergeGameScreenManager>:
    id: space_builder_merge_game_screen_manager

    Screen:
        id: dummy_screen
        name: "DummyScreen"
        manager: "space_builder_merge_game_screen_manager"

    SplashScreen1:
        id: splash_screen_1
        name: "SplashScreen1"
        manager: "space_builder_merge_game_screen_manager"

    SplashScreen2:
        id: splash_screen_2
        name: "SplashScreen2"
        manager: "space_builder_merge_game_screen_manager"

    LoadingScreen:
        id: loading_screen
        name: "LoadingScreen"
        manager: "space_builder_merge_game_screen_manager"

    BaseBuildScreen:
        id: base_build_screen
        name: "BaseBuildScreen"
        manager: "space_builder_merge_game_screen_manager"

<SplashScreen1>:
    timeBetweenImageSwitched: 0.1
    rocketFlyDuration: 2.5
    timeTillNextSplashScreen: 2


    AsyncImage:
        id: image_a
        source: AppInfo.splash_screen_images[0]
        opacity: 1

        size_hint_x: 1
        pos_hint: {"x": 1}

    AsyncImage:
        id: image_b
        source: AppInfo.splash_screen_images[1]
        opacity: -1

        size_hint_x: 1
        pos_hint: {"x": 1}

<SplashScreen2>:
    waitBeforeTitleStartShow: 0.5
    titleShowAnimationLength: 0.75
    titleShowLength: 0.5
    titleFadeAnimationLength: 0.75
    timeTillLoadingScreen: 2.5

    AsyncImage:
        id: image_a
        source: AppInfo.splash_screen_images[2]
        opacity: 0
        allow_stretch: True
        keep_ratio: True

<LoadingScreen>:
    loadingScreenShowAnimationLength: 0.75

    FloatLayout:
        id: content

        opacity: 0

        AsyncImage:
            source: AppInfo.loading_screen_background_image
            allow_stretch: True
            keep_ratio: True

            size_hint_y: None
            size_hint_x: None
            width: self.parent.width
            height: self.parent.width/self.image_ratio

        AsyncImage:
            source: AppInfo.loading_screen_title_image
            allow_stretch: True
            keep_ratio: True

            size_hint_y: None
            size_hint_x: None
            width: self.parent.width / 1.5
            height: self.parent.width / 1.5 / self.image_ratio

            pos_hint: {"x": 0, "top": 1}

        Label:
            id: loading_label
            text: "Loading..."
            font_name: AppInfo.loading_screen_loading_text_font
            font_size: "30sp"

            size_hint_x: 1
            size_hint_y: 0
            pos_hint: {"center_x": 0.5}
            top: loading_bar.y

        ProgressBar:
            id: loading_bar

            max: 1000
            value: 0

            size_hint_x: 0.8
            size_hint_y: 0.05

            pos_hint: {"center_x": 0.5, "y": 0.1}
